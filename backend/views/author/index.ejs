<h3>Authors List</h2>
<form action="/authors" method="get">
  <label>Name</label>
  <input type="text" name="name" value="<%= searchOption.name %>" />
  <button class="btn btn-primary" type="submit">Search</button>
</form>
<h3>Author Name</h3>
<% authors.forEach((author,index)=>{ %>
  <div class="author-container">
      <div><%= index+1 %>.&nbsp;<%= author.name %></div>
      <div class="author-btn">
        <a href="authors/<%= author.id %>" class="btn btn-primary">View</a>
        <a href="authors/<%= author.id %>/edit" class="btn btn-primary">Edit</a>
        <%- include("../partials/delete_form.ejs",{url:`authors/${author.id}`})%>
      </div>
</div>
 <% })
%>
