<div>
  <label for="title">Title</label>
  <input
    type="text"
    id="title"
    class="title"
    name="title"
    autocomplete="off"
    value="<%= book.title %>"
  />
</div>

<div>
  <label for="author">Author</label>
  <select name="author">
    <% authors.forEach(author=>{%> <% if(author.id === book.author){%>
    <option selected lable="<%= author.name %>" value="<%= author.id %>">
      <%= author.name %>
    </option>
    <% }else{ %>
    <option lable="<%= author.name %>" value="<%= author.id %>">
      <%= author.name %>
    </option>
    <% } %> <% }) %>
  </select>
</div>

<div>
  <label for="publishDate">PublishDate</label>
  <input
    type="date"
    id="publishDate"
    value="<%= book.publishDate == null?'':book.publishDate.toISOString().split('T')[0]; %>"
    name="publishDate"
  />
</div>

<div>
  <label for="pageCount">Page Count</label>
  <input
    type="number"
    id="pageCount"
    class="pageCount"
    name="pageCount"
    min="1"
    value="<%= book.pageCount %>"
  />
</div>

<div>
  <label for="cover">Cover</label>
  <input type="file" id="cover" name="cover" />
</div>

<div>
  <label for="description">Description</label>
  <textarea name="description" id="description"></textarea>
<%= book.description %>
  </textarea>
</div>
